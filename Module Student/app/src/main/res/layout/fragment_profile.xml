<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    </ScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textSize="28dp"
        android:textColor="@color/white"
        android:background="#145da0"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Thông tin cá nhân"/>

    <ImageView
        android:id="@+id/iv_user"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_weight="3"
        android:scaleType="centerCrop"
        android:src="@drawable/user" />

    <TextView
        android:gravity="center"
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height= "0dp"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:hint="Nhập username"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:layout_weight="10"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:padding="10dp">
        <RelativeLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_nameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:text="Họ tên: "
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edt_name"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_nameTitle"
                android:hint="Nhập họ tên"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_birthDateTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/tv_nameTitle"
                android:text="Ngày sinh"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/edt_birthDate"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/tv_birthDateTitle"
                android:layout_below="@+id/edt_name"
                android:textSize="18dp"
                android:hint="Nhập ngày sinh "/>
            <TextView
                android:id="@+id/tv_genderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/tv_birthDateTitle"
                android:text="Giới tính: "
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_birthDateTitle"
                android:layout_toRightOf="@+id/tv_genderTitle"
                android:hint="Nữ"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/tv_phoneTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/tv_genderTitle"
                android:text="Số điện thoại: "
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edt_phone"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_genderTitle"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_phoneTitle"
                android:hint="Nhập số điện thoại"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_emailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/tv_phoneTitle"
                android:text="Email liên hệ: "
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edt_email"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_phoneTitle"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_emailTitle"
                android:hint="Nhập email"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/tv_majorTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/tv_emailTitle"
                android:text="Chuyên ngành: "
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edt_major"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_emailTitle"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_majorTitle"
                android:hint="Nhập chuyên ngành"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/tv_gpaTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/tv_majorTitle"
                android:text="GPA tích lũy: "
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edt_gpa"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_majorTitle"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_gpaTitle"
                android:hint="Nhập điểm GPA"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/tv_skillsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/tv_gpaTitle"
                android:text="Kỹ năng: "
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edit_skills"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_gpaTitle"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_skillsTitle"
                android:hint="Nhập kỹ năng/chứng chỉ"
                android:textSize="18dp" />
        </RelativeLayout>

    </ScrollView>
    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="0dp">
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="191dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#0dc5b9"
            android:padding="8dp"
            android:text="Log out"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btnViewJob"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="188dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#0dc5b9"
            android:padding="8dp"
            android:text="View job"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </RelativeLayout>

</LinearLayout>