<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:id="@+id/cardview"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp"
    android:layout_height="180dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imv_logo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo1">

        </ImageView>



        <TextView
            android:id="@+id/tv_jobName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imv_logo"
            android:text="Tuyển lập trình viên"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_companyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_jobName"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@+id/imv_logo"
            android:text="Ngân hàng TMCP Ngoại thương"
            android:textSize="16dp" />
        <ImageView
            android:id="@+id/ic_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_salary"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/imv_logo"/>
        <ImageView
            android:id="@+id/ic_salary"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_salary"
            android:layout_below="@+id/tv_address"/>
        <ImageView
            android:id="@+id/ic_date"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_date"
            android:layout_below="@+id/tv_salaryTitle"/>
        <TextView
            android:id="@+id/tv_addressTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imv_logo"
            android:layout_toRightOf="@id/ic_address"
            android:layout_marginLeft="5dp"
            android:text="Địa điểm: "
            android:textSize="15dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imv_logo"
            android:layout_toRightOf="@id/tv_addressTitle"
            android:text="Quận 8"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/tv_salaryTitle"
            android:layout_toRightOf="@+id/ic_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_address"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:text="Lương: "
            android:textSize="15dp" />
        <TextView
            android:id="@+id/tv_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_address"
            android:layout_toRightOf="@id/tv_salaryTitle"
            android:text="Thỏa thuận"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/tv_dateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_salaryTitle"
            android:layout_toRightOf="@+id/ic_date"
            android:text="Hết hạn ngày: "
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_salaryTitle"
            android:layout_toRightOf="@id/tv_dateTitle"
            android:text="22/12/2002 "
            android:layout_marginLeft="5dp"
            android:textSize="14dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>