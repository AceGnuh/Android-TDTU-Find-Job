<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_arrow_back_24">

            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chi tiết công việc"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="#145da0"
                android:textStyle="bold"/>
            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="#BFF3E1"
                app:cardElevation="10dp"
                android:layout_margin="16dp"
                android:layout_height="150dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imv_logo"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/logo1" />

                    <TextView
                        android:id="@+id/tv_jobName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_toRightOf="@+id/imv_logo"
                        android:text="Tuyển lập trình viên"
                        android:textColor="@color/black"
                        android:textSize="25dp"

                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_jobCompany"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FPT Software"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:layout_marginLeft="2dp"
                        android:layout_below="@+id/tv_jobName"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/imv_logo"/>
                    <TextView
                        android:id="@+id/tv_Date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22/12/2022"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:layout_marginLeft="2dp"
                        android:layout_below="@+id/tv_jobCompany"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/imv_logo"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông tin công việc"
                    android:textColor="#145da0"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="16dp"
                    android:textSize="28dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_addressTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Địa chỉ: "

                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black"
                        android:textSize="22dp"/>

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_marginBottom="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_addressTitle"
                        android:text="Quận 8"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/tv_salaryTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_address"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="10dp"
                        android:text="Lương: "
                        android:textColor="@color/black"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/tv_salary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_address"
                        android:layout_toRightOf="@id/tv_salaryTitle"
                        android:text="Thỏa thuận"
                        android:textSize="22dp" />
                    <TextView
                        android:id="@+id/tv_majorTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_salaryTitle"
                        android:text="Chuyên ngành:  "
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black"
                        android:textSize="22dp"/>

                    <TextView
                        android:id="@+id/tv_major"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_salaryTitle"
                        android:layout_toRightOf="@id/tv_majorTitle"
                        android:text="Công nghệ thông tin"
                        android:textSize="22dp" />
                    <TextView
                        android:id="@+id/tv_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_majorTitle"
                        android:text="Mô tả: "
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/black"
                        android:textSize="22dp"/>
                </RelativeLayout>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_des"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_below="@id/tv_description"
                    android:layout_margin="16dp"
                    app:cardBackgroundColor="#BFF3E1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_description_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:textColor="@color/black"
                            android:textSize="18dp"
                            android:text="Yêu cầu thành thào các kỹ năng..... "/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnApply"
                    android:background="@drawable/button_border"
                    android:layout_width="match_parent"
                    android:layout_margin="10dp"
                    android:textSize="18dp"
                    android:layout_height="40dp"
                    android:textColor="@color/white"
                    android:text="Ứng tuyển"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>